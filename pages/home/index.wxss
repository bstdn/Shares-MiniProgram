/* pages/home/index.wxss */

.answer-box {
  margin-bottom: 10px;
  padding: 0 30rpx;
}

.answer-box:last-child {
  margin-bottom: 0;
}

.answer-box .box {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #eee;
  display: flow-root;
}

.answer-box .box .date {
  color: #333;
}

.answer-box .box .body {
  line-height: 30px;
}

.userinfo-avatar {
  float: left;
  margin-right: 4px;
  vertical-align: middle;
  width: 40px;
  height: 40px;
  border: 1rpx solid #eee;
  border-radius: 50%;
}